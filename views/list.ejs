<html>
    <head>
        <title>
            ToDo list
        </title>
        <link rel="stylesheet" href="style.css">
    </head>
    <body>
        <div class="box" id="heading">
            <h1>Today  is <%= date %></h1>
        </div>
        
        <div class="box">
            
                
                <% for(var i=0;i<items.length;i++){ %>
                    <div class="item">
                        <input type="checkbox">
                        <p>  <%= items[i] %>  </p>
                    </div>
                <% } %>
        
         
        <form class="item" action="/" method="POST">
            <input type="text" name="newItem" placeholder="New Items">
            <button type="submit">+</button>
        </form>
        </div>
        
        
    </body>
</html>